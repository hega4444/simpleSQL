SELECT department_name
FROM departments d
WHERE NOT EXISTS (
    SELECT 1
    FROM employees
    WHERE department = d.department_name
);
SELECT department_name
FROM departments
WHERE department_name = (
    SELECT department
    FROM employees
    GROUP BY department
    HAVING AVG(salary) = (
        SELECT MAX(avg_salary)
        FROM (
            SELECT department, AVG(salary) as avg_salary
            FROM employees
            GROUP BY department
        ) AS subquery
    )
);
